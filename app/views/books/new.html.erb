<h2>New book</h2>

<% if @book.errors.any? %>
　<%= @book.errors.count %>
　<ul>
　  <% @book.errors.full_messages.each do |message| %>
 　  <li><%= message %></li>
    <% end %>
　</ul>
<% end %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

